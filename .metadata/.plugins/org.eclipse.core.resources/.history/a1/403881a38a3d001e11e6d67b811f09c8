#include <iostream>
#include <string>
using namespace std;

typedef struct Batsman {
	private:
		int rank;
		string name;
		int score;
		float strikeRate;
	public:
		void setBatsman(int rank, char *name, int score , float strikeRate) {
			cout<<"\nsetting the batsman..."<<endl;
			this->rank = rank;
			//strcpy(this->name,name);
			this->name=name;
			this->score = score;
			this->strikeRate = strikeRate;
		}
		void printBatsman() {
			cout<<"Rank :"<<rank<<endl;cout<<"Name :"<<name<<endl;
			cout<<"Score:"<<score<<endl;cout<<"SR   :"<<strikeRate<<endl;
		}
}Batsman;



int main() {

	 char *month="June";

	month="pop";

	cout << "Begin" << endl; // prints Good API Design
	Batsman batsman1;
	batsman1.setBatsman(10,"Sachin",10000,89.45);
	//batsman1.rank=-10;
	batsman1.printBatsman();
	return 0;
}
