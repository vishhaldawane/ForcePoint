{
public:
	void lookAtTheAnimalsBreathing(Animal *ptr) {
		//some common code here for ptr->pointed object
		ptr->breathing();
		//ptr->swim();
		delete ptr;
		cout<<"\n-----------";
	}
};//RTTI - RunTime Type Identification
